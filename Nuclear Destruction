//These two methods print out words, letter by letter. The speeds are dependent on the Sleep(args[0]); method
void pOverride(string out) {
	for (int i = 0; i < out.length(); i++) {
		Sleep(2);
		cout << out.at(i);
	}
}

void display(string out) {
	for (int i = 0; i < out.length(); i++) {
		Sleep(20);
		cout << out.at(i);
	}
}
 
