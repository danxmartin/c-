		cout << "         ( (  ( (  (  )     (_  )  ) )  _)   ) _( ( )" << endl;
		cout << "          ((  (   )(    (     _    )   _) _(_ (  (_ )" << endl;
		cout << "           (_((__(_(__(( ( ( |  ) ) ) )_))__))_)___)" << endl;
		cout << "           ((__)        \\||lll|l||/-/          \_))" << endl;
		cout << "                    (   /(/ (  )  ) )\   )" << endl;
		cout << "                  (    ( ( ( | | ) ) )\   )" << endl;
		cout << "                   (   /(| / ( )) ) ) )) )" << endl;
		cout << "                 (     ( ((((_(|)_)))))    ) " << endl;
		cout << "                  (      ||\(|(|)|/||     )" << endl;
		cout << "                (        |(||(||)||||        )" << endl;
		cout << "                   (     /|//|||)|\\ \     )" << endl;
		cout << "                (/ / -/  ///|||||\\  \ \  \ _)" << endl;
		cin >> hold;
	}

}
